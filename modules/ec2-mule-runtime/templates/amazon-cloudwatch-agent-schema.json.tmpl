{
  "agent": {
    "metrics_collection_interval": 60,
    "logfile": "/var/log/amazon-cloudwatch-agent.log",
    "debug": false
  },
  "metrics": {
    "namespace": "${custom_metric_namespace}",
    "append_dimensions": {
      "InstanceId": "$${aws:InstanceId}"
    },
    "metrics_collected": {
      "mem": {
        "measurement": [
          "mem_used_percent"
        ]
      },
      "swap": {
        "measurement": [
          "swap_used_percent"
        ]
      },
      "disk": {
        "resources": [
          "/"
        ],
        "measurement": [
          "used_percent"
        ],
        "drop_device": true
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/amazon-cloudwatch-agent.log",
            "log_group_name": "${log_group}",
            "log_stream_name": "cw_agent/{instance_id}",
            "timezone": "Local"
          },{
            "file_path": "/var/log/syslog",
            "log_group_name": "${log_group}",
            "log_stream_name": "syslog/{instance_id}",
            "timezone": "Local"
          },{
            "file_path": "/opt/mule/current/logs/mule_ee.log",
            "log_group_name": "${log_group}",
            "log_stream_name": "mule_ee/{instance_id}",
            "timezone": "Local"
          },{
            "file_path": "/opt/mule/current/logs/mule_agent.log",
            "log_group_name": "${log_group}",
            "log_stream_name": "mule_agent/{instance_id}",
            "timezone": "Local"
          }
        ]
      }
    }
  }
}
